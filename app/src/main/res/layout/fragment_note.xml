<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".noteapp.ui.fragments.note.NoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_note_back"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="17dp"
        android:paddingEnd="16dp"
        android:paddingBottom="9dp">

        <ImageButton
            android:id="@+id/img_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:src="@drawable/ic_menu" />

        <TextView
            android:id="@+id/txt_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="78dp"
            android:text="@string/notes"
            android:textColor="@color/grey_note"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/img_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey_note"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_dashboard" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="26dp"
        android:paddingTop="16dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="11dp"
            android:background="@drawable/et_view"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="14dp"
            android:paddingVertical="8dp"
            android:paddingStart="11dp"
            android:text="@string/search"
            android:textColor="@color/grey_note"
            android:textSize="14sp" />

    </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_note"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_note" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@color/orange_btn_plus"
        android:text="+"
        android:textSize="44sp"
        android:textStyle="bold" />

</LinearLayout>